{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@client/*": ["./src/client/*"],
			"@server/*": ["./src/server/*"],
			"@shared/*": ["./src/shared/*"]
		}
	},
	"include": ["src/server/**/*", "scripts/**/*", "vite.config.ts"]
}
